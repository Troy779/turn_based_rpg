mkdir spells
touch spells/spells.py
# spells/spells.py

class Spell:
    def __init__(self, name, damage, heal=0, mana_cost=0):
        self.name = name
        self.damage = damage
        self.heal = heal
        self.mana_cost = mana_cost

    def cast(self, caster, target):
        if self.heal > 0:  # Healing spell
            target.health += self.heal
            if target.health > target.max_health:
                target.health = target.max_health
            print(f"{caster.name} casts {self.name} and heals {self.heal} health!")
        elif self.damage > 0:  # Damage spell
            target.take_damage(self.damage)
            print(f"{caster.name} casts {self.name} and deals {self.damage} damage to {target.name}!")
        else:
            print("Spell has no effect.")

# Example spells
fireball = Spell(name="Fireball", damage=25, mana_cost=5)
heal = Spell(name="Heal", heal=20, mana_cost=8)
lightning = Spell(name="Lightning Bolt", damage=30, mana_cost=6)

# List of available spells
spells_list = [fireball, heal, lightning]
